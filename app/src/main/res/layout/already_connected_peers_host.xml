<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_connected"
  android:paddingTop="3dp">

  <TextView
    android:id="@+id/peerDetailtextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBar"
    android:text="My Details"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:textSize="18sp" />

  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:gravity="center_vertical"
    android:background="@android:color/darker_gray" />

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@drawable/bg_mydetails"
    android:padding="3dip">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="fill_parent">

      <TextView
        android:id="@+id/my_name"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/global_color_primary_light"
        android:textSize="16sp" />

      <TextView
        android:id="@+id/my_status"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:textColor="@color/global_color_primary_light" />

    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:gravity="center_vertical"
    android:background="@drawable/app_bar" />

  <!-- Available peers -->
  <TextView
    android:id="@+id/textView4"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBar"
    android:gravity="center_vertical"
    android:text="List of Connected Peers"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:textSize="18sp" />

  <TextView
    android:id="@id/android:empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:text="No Peer Nearby"
    android:textColor="@color/global_color_primary_light"
    android:textSize="16sp" />

  <ListView
    android:id="@id/android:list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:drawSelectorOnTop="false" />

</LinearLayout>
