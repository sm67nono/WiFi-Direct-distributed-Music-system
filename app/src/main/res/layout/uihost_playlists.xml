<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_playlists"
    android:id="@+id/tab1_container">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/songsFromSDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/global_color_primary_light"
            android:paddingLeft="5dp">
        </TextView>

        <TextView
            android:id="@+id/totalSongsFromSDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_color_primary_light"
            android:layout_below="@id/songsFromSDCard"
            android:textSize="15sp"
            android:paddingLeft="5dp">
        </TextView>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="5dp">
            </TextView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Playlists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/global_color_primary_light"
                android:layout_gravity="start"
                android:paddingLeft="5dp">
            </TextView>

            <TextView
                android:id="@+id/createPlaylist"
                android:text="Create Playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/global_color_primary_light"
                android:layout_gravity="end"
                android:paddingLeft="5dp">
            </TextView>
        </FrameLayout>

    </LinearLayout>


  <ListView
    android:id="@+id/playList"
    android:layout_width="477dp"
    android:layout_height="326dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:choiceMode="singleChoice"
    android:divider="#242424"
    android:dividerHeight="0.5dp"
    android:listSelector="@color/colorBar"
    android:paddingTop="20dp" />


</RelativeLayout>
